<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane fx:id="rootPane" prefHeight="600" prefWidth="800"
	stylesheets="@AppView.css" xmlns="http://javafx.com/javafx/8.0.111"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="gvs.ui.view.app.AppView">
	<top>
		<GridPane BorderPane.alignment="CENTER">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
					prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<MenuBar>
					<menus>
						<Menu fx:id="gvsMenu" text="GVS">
							<items>
								<MenuItem fx:id="importMenuItem" onAction="#loadSession"
									text="_Import" />
								<MenuItem fx:id="quitMenuItem" onAction="#quitGVS"
									text="_Quit" />
							</items>
						</Menu>
					</menus>
				</MenuBar>
				<GridPane GridPane.rowIndex="1">
					<columnConstraints>
						<ColumnConstraints hgrow="SOMETIMES" minWidth="300.0"
							prefWidth="300.0" />
						<ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0"
							minWidth="200.0" prefWidth="200.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
					</rowConstraints>
					<children>
						<ComboBox fx:id="chooseSessionBox" onAction="#changeSession"
							prefWidth="350.0" GridPane.halignment="LEFT" GridPane.hgrow="ALWAYS">
							<GridPane.margin>
								<Insets left="10.0" />
							</GridPane.margin>
						</ComboBox>
						<ButtonBar GridPane.columnIndex="1" GridPane.halignment="RIGHT"
							GridPane.hgrow="NEVER">
							<GridPane.margin>
								<Insets right="10.0" />
							</GridPane.margin>
							<buttons>
								<Button fx:id="saveSessionBtn" mnemonicParsing="false"
									onMouseClicked="#saveSession" text="Save" />
								<Button fx:id="deleteSessionBtn" mnemonicParsing="false"
									onMouseClicked="#removeSession" text="Delete" />
							</buttons>
						</ButtonBar>
					</children>
				</GridPane>
			</children>
		</GridPane>
	</top>
	<center>
		<AnchorPane BorderPane.alignment="CENTER">
			<children>
				<fx:include fx:id="sessionView" source="../session/SessionView.fxml"
					AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
					AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" />
			</children>
		</AnchorPane>
	</center>


</BorderPane>
