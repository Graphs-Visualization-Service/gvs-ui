<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import jfxtras.labs.scene.layout.ScalableContentPane?>

<BorderPane stylesheets="@SessionView.css" xmlns="http://javafx.com/javafx/8.0.111"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="gvs.ui.view.session.SessionView">

	<center>
		<ScalableContentPane fx:id="graphPane" />
	</center>

	<bottom>
		<BorderPane>
			<padding>
				<Insets top="10" />
			</padding>
			<left>
				<AnchorPane fx:id="leftPanel">
					<children>
						<GridPane fx:id="stepButtons" AnchorPane.leftAnchor="5.0"
							AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
							<columnConstraints>
								<ColumnConstraints hgrow="SOMETIMES" />
								<ColumnConstraints hgrow="SOMETIMES" />
								<ColumnConstraints hgrow="SOMETIMES" />
								<ColumnConstraints hgrow="SOMETIMES" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints minHeight="10.0" prefHeight="30.0"
									vgrow="ALWAYS" />
							</rowConstraints>
							<children>
								<Button GridPane.halignment="CENTER" fx:id="firstBtn"
									mnemonicParsing="false" onMouseClicked="#stepToFirst"
									GridPane.columnIndex="0" />
								<Button GridPane.halignment="CENTER" fx:id="prevBtn"
									mnemonicParsing="false" onMouseClicked="#stepBackward"
									GridPane.columnIndex="1" />
								<Button GridPane.halignment="CENTER" fx:id="nextBtn"
									mnemonicParsing="false" onMouseClicked="#stepForward"
									GridPane.columnIndex="2" />
								<Button GridPane.halignment="CENTER" fx:id="lastBtn"
									mnemonicParsing="false" onMouseClicked="#stepToLast"
									GridPane.columnIndex="3" />
							</children>
						</GridPane>
					</children>
				</AnchorPane>
			</left>
			<center>
				<AnchorPane>
					<children>
						<TextArea prefHeight="80" prefWidth="200.0"
							AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0"
							AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0" />
					</children>
				</AnchorPane>
			</center>
			<right>
				<AnchorPane>
					<children>
						<GridPane fx:id="playGrid" AnchorPane.leftAnchor="5.0"
							AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
							<columnConstraints>
								<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
									prefWidth="50." />
								<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
									prefWidth="50.0" />
								<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
									prefWidth="100.0" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints minHeight="10.0" prefHeight="30.0"
									vgrow="SOMETIMES" />
							</rowConstraints>
							<children>
								<Button fx:id="replayBtn" mnemonicParsing="false"
									onMouseClicked="#replayGraph" GridPane.columnIndex="0"
									GridPane.halignment="CENTER" />
								<Button fx:id="cancelReplayBtn" mnemonicParsing="false"
									onMouseClicked="#cancelReplayGraph" GridPane.columnIndex="1"
									GridPane.halignment="CENTER" />
								<Button fx:id="autoLayoutBtn" mnemonicParsing="false"
									onMouseClicked="#autoLayout" text="AutoLayout"
									GridPane.columnIndex="2" GridPane.halignment="CENTER" />
							</children>
						</GridPane>
						<Slider fx:id="speedSlider" majorTickUnit="500.0" max="2000.0"
							minorTickCount="10" prefWidth="200.0" showTickLabels="true"
							showTickMarks="true" snapToTicks="true" AnchorPane.bottomAnchor="5.0"
							AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" />
					</children>
				</AnchorPane>
			</right>
		</BorderPane>
	</bottom>
</BorderPane>
